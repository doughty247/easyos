{
  "hostName": "easyos",
  "timeZone": "UTC",
  "swapMiB": 4096,
  "users": {
    "admin": {
      "name": "easyadmin",
      "authorizedKeys": [
        "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIExampleKeyReplaceMe user@example"
      ]
    }
  },

  "mode": "first-run",
  "network": {
    "interface": "wlan0",
    "ssid": "EASY-Setup",
    "psk": "changeme-strong-pass",
    "hotspotSubnet": "10.42.0.0/24",
    "hotspotIP": "10.42.0.1",
    "hotspotDHCPStart": "10.42.0.10",
    "hotspotDHCPEnd": "10.42.0.250",
    "wifiChannel": "6",
    "hotspotAllowWAN": false,
    "clientIsolation": true,
    "qosEnabled": true,
    "qosDownloadMbps": "100",
    "qosUploadMbps": "20",
    "qosAutoDetect": false,
    "wifiPowerSave": false
  },

  "backup": {
    "enable": true,
  "targetType": "local",
  "target": "/srv/backup",
    "onCalendar": "daily",
    "subvolumes": ["/", "/home", "/var"]
  },

  "storage": {
    "auto": false,
    "devices": ["/dev/sdb", "/dev/sdc"],
    "mountPoint": "/",
    "profile": "raid1"
  }
}
